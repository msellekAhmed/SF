<coordinator-app name="SEGMENT KR PMJU" frequency="${coord:months(1)}" start="${start}" end="${end}"                 timezone="Europe/Paris" xmlns="uri:oozie:coordinator:0.4">    <!-- Coordinator Control -->    <controls>        <timeout>-1</timeout>        <concurrency>1</concurrency>        <execution>FIFO</execution>    </controls>    <!-- DataSets Definition : on veut une partition -->    <datasets>        <dataset name="BDI" frequency="${coord:months(1)}" initial-instance="${initialInstance}"                 timezone="Europe/Paris">            <uri-template>/project/cdn/pcc/hive/project_cdn_pcc_bdi.db/_FLAG/${YEAR}${MONTH}</uri-template>            <done-flag>_SUCCESS</done-flag>        </dataset>    </datasets>    <!-- Waiting for input : on veut la partition de la veille -->    <input-events>        <data-in name="input_bdi" dataset="BDI">            <instance>${coord:current(-1)}</instance>        </data-in>    </input-events>    <!-- WorkFlow Definition and sending param : calcul du paramÃ¨tre -->    <action>        <workflow>            <app-path>${MAVEN_OOZIE_DIR}/workflows/workflow_kr_pmju.xml</app-path>            <configuration>                <property>                    <name>BDI</name>                    <value>${coord:dataIn('input_bdi')}</value>                </property>                <property>                    <name>dt</name>                    <value>${coord:formatTime(coord:nominalTime(), 'yyyyMMdd')}</value>                </property>                <!-- BDI FLAG path -->                <property>                    <name>bdi_flag_path</name>                    <value>/project/cdn/pcc/hive/project_cdn_pcc_bdi.db/_FLAG/</value>                </property>            </configuration>        </workflow>    </action></coordinator-app>