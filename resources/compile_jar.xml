<assembly>

    <id>jar-with-dependencies</id>

    <formats>
        <format>jar</format>
    </formats>

    <includeBaseDirectory>false</includeBaseDirectory>
    <dependencySets>
        <dependencySet>
            <outputDirectory>/</outputDirectory>
            <useProjectArtifact>true</useProjectArtifact>
            <unpack>true</unpack>
            <includes>
                <include>*.jar</include>
            </includes>
            <unpackOptions>
                <excludes>
                    <exclude>**/JobNameBuilder.*</exclude>
                </excludes>
            </unpackOptions>
        </dependencySet>
    </dependencySets>
</assembly>